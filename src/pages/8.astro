---
import { formatDate, getPublishedPosts } from '../lib/posts';

const posts = await getPublishedPosts();
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>dotmd Feed Concept 8 | Bauhaus Field</title>
		<meta name="description" content="Feed concept 8: geometric bauhaus composition." />
		<style is:global>
			@import url('https://fonts.googleapis.com/css2?family=Archivo+Black&family=Work+Sans:wght@400;600;700&display=swap');
			:root {
				--bg: #f7f5ef;
				--ink: #131313;
				--red: #e83d27;
				--blue: #1456ff;
				--yellow: #ffd028;
			}
			* {
				box-sizing: border-box;
			}
			body {
				margin: 0;
				font-family: 'Work Sans', sans-serif;
				background: var(--bg);
				color: var(--ink);
			}
			.stage {
				width: min(1200px, calc(100vw - 1.6rem));
				margin: 0.8rem auto 2.5rem;
				position: relative;
			}
			.blob {
				position: absolute;
				pointer-events: none;
			}
			.b1 {
				width: 170px;
				height: 170px;
				border-radius: 50%;
				background: var(--yellow);
				top: -40px;
				left: -30px;
			}
			.b2 {
				width: 120px;
				height: 120px;
				background: var(--blue);
				right: 5%;
				top: 14%;
				transform: rotate(45deg);
			}
			.b3 {
				width: 220px;
				height: 28px;
				background: var(--red);
				left: 36%;
				top: 22%;
				transform: rotate(-16deg);
			}
			.head {
				padding: 1.2rem;
				border: 3px solid var(--ink);
				background: #ffffffea;
				position: relative;
				z-index: 1;
			}
			.head h1 {
				margin: 0;
				font: 400 clamp(2.3rem, 8.2vw, 6.2rem) / 0.9 'Archivo Black', sans-serif;
				text-transform: uppercase;
				max-width: 10ch;
			}
			.head p {
				margin: 0.55rem 0 0;
				max-width: 58ch;
			}
			.nav {
				display: flex;
				gap: 0.35rem;
				flex-wrap: wrap;
				margin-top: 0.8rem;
			}
			.nav a {
				text-decoration: none;
				font: 700 0.78rem/1 'Work Sans', sans-serif;
				padding: 0.3rem 0.5rem;
				border: 2px solid var(--ink);
				color: var(--ink);
				background: #fff;
			}
			.nav a.active {
				background: var(--red);
				color: #fff;
			}
			.grid {
				display: grid;
				grid-template-columns: repeat(12, 1fr);
				gap: 0.65rem;
				margin-top: 0.8rem;
			}
			.card {
				grid-column: span 4;
				border: 3px solid var(--ink);
				padding: 0.8rem;
				background: #fff;
				animation: drop 520ms cubic-bezier(0.21, 1, 0.29, 1) both;
			}
			.card:nth-child(2n) {
				transform: translateY(0.7rem);
			}
			.card:nth-child(3n) {
				background: #fff6d8;
			}
			.card:nth-child(2) {
				animation-delay: 100ms;
			}
			.card:nth-child(3) {
				animation-delay: 180ms;
			}
			.card:nth-child(4) {
				animation-delay: 250ms;
			}
			.card:nth-child(5) {
				animation-delay: 330ms;
			}
			.card time {
				font-size: 0.73rem;
				font-weight: 700;
				text-transform: uppercase;
				letter-spacing: 0.07em;
				color: #444;
			}
			.card h2 {
				margin: 0.55rem 0 0.42rem;
				font: 400 clamp(1.3rem, 3vw, 1.95rem) / 1 'Archivo Black', sans-serif;
				text-transform: uppercase;
			}
			.card p {
				margin: 0;
			}
			.card a {
				display: inline-block;
				margin-top: 0.7rem;
				background: var(--blue);
				color: #fff;
				text-decoration: none;
				padding: 0.3rem 0.56rem;
				font-size: 0.78rem;
				font-weight: 700;
			}
			@keyframes drop {
				from {
					opacity: 0;
					transform: translateY(-12px) scale(0.96);
				}
				to {
					opacity: 1;
					transform: none;
				}
			}
			@media (max-width: 980px) {
				.card {
					grid-column: span 6;
				}
			}
			@media (max-width: 650px) {
				.card {
					grid-column: span 12;
				}
				.card:nth-child(2n) {
					transform: none;
				}
			}
		</style>
	</head>
	<body>
		<div class="stage">
			<div class="blob b1"></div>
			<div class="blob b2"></div>
			<div class="blob b3"></div>
			<header class="head">
				<h1>Bauhaus Feed</h1>
				<p>Primary-color geometry and hard-edge composition for a gallery-grade editorial feed.</p>
				<nav class="nav" aria-label="Design routes">
					<a href="/1">01</a><a href="/2">02</a><a href="/3">03</a><a href="/4">04</a><a href="/5">05</a>
					<a href="/6">06</a><a href="/7">07</a><a class="active" href="/8">08</a><a href="/9">09</a><a href="/10">10</a>
				</nav>
			</header>
			<main class="grid">
				{
					posts.map((post) => (
						<article class="card">
							<time>{formatDate(post.data.date)}</time>
							<h2>{post.data.title}</h2>
							<p>{post.data.description}</p>
							<a href={`/${post.slug}`}>Open</a>
						</article>
					))
				}
			</main>
		</div>
	</body>
</html>
