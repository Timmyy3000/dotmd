---
import ThemeToggle from '../components/ThemeToggle.astro';
import { formatDate, getPublishedPosts } from '../lib/posts';

const posts = await getPublishedPosts();
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>dotmd Feed Concept 13 | Blueprint Ops</title>
		<style is:global>
			@import url('https://fonts.googleapis.com/css2?family=Exo+2:wght@500;700&family=Space+Mono:wght@400;700&display=swap');
			:root { --bg:#e8eef9; --panel:#f5f8ff; --ink:#10233f; --line:#8da7d8; --accent:#1b5bd6; --muted:#4d648d; }
			:root[data-theme='dark'] { --bg:#060c18; --panel:#0d1628; --ink:#d8e6ff; --line:#2f4264; --accent:#6fa8ff; --muted:#91a9cf; }
			*{box-sizing:border-box}
			body{margin:0;font-family:'Space Mono',monospace;background:repeating-linear-gradient(0deg,#0000 0 39px,#12326212 39px 40px),repeating-linear-gradient(90deg,#0000 0 39px,#12326212 39px 40px),var(--bg);color:var(--ink)}
			.wrap{width:min(1160px,calc(100vw - 2rem));margin:1rem auto 3rem}
			.head{border:1px solid var(--line);background:var(--panel);padding:.9rem}
			h1{margin:0;font:700 clamp(2rem,7vw,4.8rem)/.9 'Exo 2',sans-serif;letter-spacing:.03em;text-transform:uppercase}
			.head p{margin:.45rem 0 0;color:var(--muted)}
			.controls{display:flex;gap:.45rem;flex-wrap:wrap;margin-top:.65rem}
			.theme-toggle,.nav a{border:1px solid var(--line);background:var(--bg);color:var(--ink);padding:.25rem .5rem;text-decoration:none;font-size:.73rem}
			.nav{display:flex;gap:.35rem;flex-wrap:wrap}
			.nav a.active{background:var(--accent);color:#fff;border-color:var(--accent)}
			.feed{margin-top:.8rem;display:grid;grid-template-columns:repeat(auto-fit,minmax(280px,1fr));gap:.7rem}
			.card{border:1px solid var(--line);background:var(--panel);padding:.8rem;position:relative}
			.card::before{content:'';position:absolute;inset:6px;border:1px dashed #7da2db55;pointer-events:none}
			.card time{font-size:.74rem;color:var(--accent)}
			.card h2{margin:.45rem 0 .35rem;font:700 clamp(1.1rem,2.5vw,1.55rem)/1.08 'Exo 2',sans-serif;text-transform:uppercase}
			.card p{margin:0;color:var(--muted);font-size:.92rem}
			.card a{display:inline-block;margin-top:.7rem;color:var(--accent);text-decoration:none;font-weight:700}
		</style>
	</head>
	<body>
		<div class="wrap">
			<header class="head">
				<h1>Blueprint Ops Feed</h1>
				<p>Technical drafting motif with grid overlays, mono metadata, and instrumentation styling.</p>
				<div class="controls">
					<ThemeToggle storageKey="dotmd-theme-13" />
					<nav class="nav" aria-label="Concept routes">
						<a href="/11">11</a><a href="/12">12</a><a class="active" href="/13">13</a><a href="/14">14</a><a href="/15">15</a><a href="/16">16</a><a href="/17">17</a><a href="/18">18</a><a href="/19">19</a><a href="/20">20</a>
					</nav>
				</div>
			</header>
			<main class="feed">
				{posts.map((post) => (
					<article class="card">
						<time>{formatDate(post.data.date)}</time>
						<h2>{post.data.title}</h2>
						<p>{post.data.description}</p>
						<a href={`/${post.slug}`}>Inspect</a>
					</article>
				))}
			</main>
		</div>
	</body>
</html>
