---
import { formatDate, getPublishedPosts } from '../lib/posts';

const posts = await getPublishedPosts();
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>dotmd Feed Concept 1 | Brutalist Editorial</title>
		<meta name="description" content="Feed concept 1: brutalist editorial newspaper style." />
		<style is:global>
			@import url('https://fonts.googleapis.com/css2?family=Oswald:wght@400;500;700&family=Literata:opsz,wght@7..72,400;7..72,600&display=swap');

			:root {
				--bg: #f7f1e6;
				--ink: #111111;
				--paper: #fffef8;
				--accent: #c1121f;
				--muted: #5c5952;
			}

			* {
				box-sizing: border-box;
			}

			body {
				margin: 0;
				font-family: 'Literata', serif;
				background:
					repeating-linear-gradient(0deg, rgba(17, 17, 17, 0.05), rgba(17, 17, 17, 0.05) 1px, transparent 1px, transparent 28px),
					var(--bg);
				color: var(--ink);
			}

			.wrap {
				width: min(1100px, calc(100vw - 2rem));
				margin: 1.2rem auto 3rem;
			}

			.top {
				display: grid;
				gap: 0.8rem;
				margin-bottom: 1.4rem;
			}

			.kicker {
				display: inline-block;
				background: var(--accent);
				color: #ffffff;
				font: 500 0.78rem/1 'Oswald', sans-serif;
				letter-spacing: 0.17em;
				padding: 0.4rem 0.7rem;
				text-transform: uppercase;
				width: fit-content;
				transform: rotate(-1.4deg);
			}

			h1 {
				font-family: 'Oswald', sans-serif;
				font-size: clamp(3rem, 9vw, 6.5rem);
				line-height: 0.95;
				letter-spacing: 0.02em;
				margin: 0;
				text-transform: uppercase;
			}

			.deck {
				max-width: 70ch;
				color: var(--muted);
				margin: 0;
			}

			.switcher {
				display: flex;
				gap: 0.45rem;
				flex-wrap: wrap;
			}

			.switcher a {
				text-decoration: none;
				font: 500 0.74rem/1 'Oswald', sans-serif;
				letter-spacing: 0.12em;
				padding: 0.4rem 0.6rem;
				border: 1px solid var(--ink);
				color: var(--ink);
				background: #ffffff99;
				text-transform: uppercase;
			}

			.switcher a.active {
				background: var(--ink);
				color: #fff;
			}

			.feed-grid {
				display: grid;
				grid-template-columns: 1.2fr 1fr;
				gap: 1rem;
			}

			article {
				background: var(--paper);
				border: 3px solid var(--ink);
				padding: 1rem;
				animation: printin 540ms ease both;
				position: relative;
			}

			article::before {
				content: '';
				position: absolute;
				inset: 6px;
				border: 1px dashed #25252555;
				pointer-events: none;
			}

			article:nth-child(even) {
				transform: translateY(0.6rem);
			}

			article:nth-child(2) {
				animation-delay: 90ms;
			}
			article:nth-child(3) {
				animation-delay: 160ms;
			}
			article:nth-child(4) {
				animation-delay: 220ms;
			}
			article:nth-child(5) {
				animation-delay: 280ms;
			}

			.meta {
				margin: 0;
				color: var(--muted);
				font: 500 0.72rem/1 'Oswald', sans-serif;
				letter-spacing: 0.11em;
				text-transform: uppercase;
			}

			article h2 {
				font: 500 clamp(1.35rem, 2.5vw, 1.95rem) / 1.1 'Oswald', sans-serif;
				text-transform: uppercase;
				margin: 0.65rem 0 0.5rem;
			}

			article p {
				margin: 0;
				color: #292622;
			}

			article a.link {
				display: inline-block;
				margin-top: 0.8rem;
				color: var(--accent);
				font: 500 0.8rem/1 'Oswald', sans-serif;
				letter-spacing: 0.09em;
				text-transform: uppercase;
				text-decoration: none;
				border-bottom: 2px solid currentColor;
			}

			@keyframes printin {
				from {
					opacity: 0;
					transform: translateY(16px);
				}
				to {
					opacity: 1;
					transform: translateY(0);
				}
			}

			@media (max-width: 900px) {
				.feed-grid {
					grid-template-columns: 1fr;
				}

				article:nth-child(even) {
					transform: none;
				}
			}
		</style>
	</head>
	<body>
		<div class="wrap">
			<header class="top">
				<div class="kicker">Feed Concept 01</div>
				<h1>The Daily Dotmd</h1>
				<p class="deck">
					Brutalist editorial treatment with hard borders, ink-heavy typography, and staggered story blocks.
				</p>
				<nav class="switcher" aria-label="Design concepts">
					<a class="active" href="/1">01</a>
					<a href="/2">02</a>
					<a href="/3">03</a>
					<a href="/4">04</a>
					<a href="/5">05</a>
				</nav>
			</header>
			<main class="feed-grid">
				{
					posts.map((post) => (
						<article>
							<p class="meta">{formatDate(post.data.date)}</p>
							<h2>{post.data.title}</h2>
							<p>{post.data.description}</p>
							<a class="link" href={`/${post.slug}`}>
								Read story
							</a>
						</article>
					))
				}
			</main>
		</div>
	</body>
</html>
