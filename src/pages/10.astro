---
import { formatDate, getPublishedPosts } from '../lib/posts';

const posts = await getPublishedPosts();
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>dotmd Feed Concept 10 | Liquid Chrome</title>
		<meta name="description" content="Feed concept 10: liquid chrome futuristic dashboard." />
		<style is:global>
			@import url('https://fonts.googleapis.com/css2?family=Syne:wght@500;700;800&family=Barlow:wght@400;500;700&display=swap');
			:root {
				--bg: #07090f;
				--glass: #cfe0ff14;
				--stroke: #ffffff33;
				--text: #e9efff;
				--muted: #9fa8c5;
				--accent: #6ee7ff;
			}
			* {
				box-sizing: border-box;
			}
			body {
				margin: 0;
				font-family: 'Barlow', sans-serif;
				color: var(--text);
				background:
					radial-gradient(900px 500px at 90% -20%, #6ee7ff33, transparent 60%),
					radial-gradient(800px 450px at -10% 120%, #7b8cff33, transparent 60%),
					var(--bg);
				min-height: 100vh;
			}
			.shell {
				width: min(1180px, calc(100vw - 2rem));
				margin: 1rem auto 3rem;
			}
			.hero {
				border: 1px solid var(--stroke);
				background: linear-gradient(150deg, #d9e6ff1a, #ffffff08);
				backdrop-filter: blur(14px);
				border-radius: 24px;
				padding: 1rem;
				position: relative;
				overflow: hidden;
			}
			.hero::after {
				content: '';
				position: absolute;
				inset: -2px;
				background: linear-gradient(120deg, #ffffff00 15%, #ffffff44 50%, #ffffff00 85%);
				transform: translateX(-100%);
				animation: sheen 3.2s linear infinite;
				pointer-events: none;
			}
			.hero h1 {
				margin: 0;
				font: 800 clamp(2.2rem, 7.5vw, 5.8rem) / 0.9 'Syne', sans-serif;
				letter-spacing: -0.02em;
			}
			.hero p {
				margin: 0.5rem 0 0;
				max-width: 58ch;
				color: var(--muted);
			}
			.switch {
				margin-top: 0.8rem;
				display: flex;
				flex-wrap: wrap;
				gap: 0.42rem;
			}
			.switch a {
				text-decoration: none;
				color: #c6d5ff;
				border: 1px solid #ffffff33;
				border-radius: 999px;
				padding: 0.28rem 0.58rem;
				font-size: 0.75rem;
				letter-spacing: 0.08em;
			}
			.switch a.active {
				color: #091124;
				background: var(--accent);
				border-color: transparent;
				font-weight: 700;
			}
			.feed {
				margin-top: 1rem;
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(270px, 1fr));
				gap: 0.85rem;
			}
			.tile {
				position: relative;
				border: 1px solid #ffffff2a;
				background: linear-gradient(170deg, #f2f7ff18, #00000022);
				border-radius: 18px;
				padding: 0.9rem;
				backdrop-filter: blur(10px);
				overflow: hidden;
				animation: floatin 600ms cubic-bezier(0.21, 1, 0.24, 1) both;
			}
			.tile:nth-child(2) {
				animation-delay: 90ms;
			}
			.tile:nth-child(3) {
				animation-delay: 180ms;
			}
			.tile:nth-child(4) {
				animation-delay: 250ms;
			}
			.tile:nth-child(5) {
				animation-delay: 320ms;
			}
			.tile::before {
				content: '';
				position: absolute;
				inset: auto -50px -60px auto;
				width: 180px;
				height: 180px;
				border-radius: 50%;
				background: radial-gradient(circle, #6ee7ff44, transparent 64%);
				pointer-events: none;
			}
			.tile time {
				font-size: 0.78rem;
				color: #bdd8ff;
				letter-spacing: 0.06em;
				text-transform: uppercase;
			}
			.tile h2 {
				margin: 0.5rem 0 0.45rem;
				font: 700 clamp(1.3rem, 3vw, 1.85rem) / 1.03 'Syne', sans-serif;
			}
			.tile p {
				margin: 0;
				color: var(--muted);
			}
			.tile a {
				display: inline-block;
				margin-top: 0.75rem;
				text-decoration: none;
				color: #071026;
				background: var(--accent);
				border-radius: 0.6rem;
				padding: 0.3rem 0.56rem;
				font-weight: 700;
				font-size: 0.8rem;
			}
			@keyframes sheen {
				to {
					transform: translateX(100%);
				}
			}
			@keyframes floatin {
				from {
					opacity: 0;
					transform: translateY(16px) scale(0.98);
				}
				to {
					opacity: 1;
					transform: none;
				}
			}
		</style>
	</head>
	<body>
		<div class="shell">
			<header class="hero">
				<h1>Liquid Chrome Feed</h1>
				<p>Frosted glass surfaces, moving spectral highlights, and high-tech editorial tiles.</p>
				<nav class="switch" aria-label="Design routes">
					<a href="/1">01</a><a href="/2">02</a><a href="/3">03</a><a href="/4">04</a><a href="/5">05</a>
					<a href="/6">06</a><a href="/7">07</a><a href="/8">08</a><a href="/9">09</a><a class="active" href="/10">10</a>
				</nav>
			</header>
			<main class="feed">
				{
					posts.map((post) => (
						<article class="tile">
							<time>{formatDate(post.data.date)}</time>
							<h2>{post.data.title}</h2>
							<p>{post.data.description}</p>
							<a href={`/${post.slug}`}>Enter</a>
						</article>
					))
				}
			</main>
		</div>
	</body>
</html>
