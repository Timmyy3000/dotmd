---
import ThemeToggle from '../components/ThemeToggle.astro';
import { formatDate, getPublishedPosts } from '../lib/posts';

const posts = await getPublishedPosts();
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>dotmd Feed Concept 15 | Arcade Grid</title>
		<style is:global>
			@import url('https://fonts.googleapis.com/css2?family=Press+Start+2P&family=VT323&display=swap');
			:root { --bg:#fef9e7; --panel:#fff; --ink:#2a1f0a; --accent:#d94c00; --line:#2a1f0a; }
			:root[data-theme='dark'] { --bg:#120f1f; --panel:#1e1731; --ink:#f7f2ff; --accent:#8cff00; --line:#8cff00; }
			*{box-sizing:border-box}
			body{margin:0;font-family:'VT323',monospace;background:repeating-linear-gradient(0deg,#0000 0 8px,#0000000e 8px 10px),var(--bg);color:var(--ink)}
			.shell{width:min(1080px,calc(100vw - 1.4rem));margin:.9rem auto 2.5rem}
			.top{padding:.8rem;border:3px solid var(--line);background:var(--panel)}
			h1{margin:0;font:400 clamp(1.5rem,5vw,2.6rem)/1.1 'Press Start 2P',cursive;text-transform:uppercase}
			.top p{margin:.5rem 0 0;font-size:1.2rem}
			.controls{display:flex;gap:.4rem;flex-wrap:wrap;margin-top:.6rem}
			.theme-toggle,.nav a{border:2px solid var(--line);background:var(--bg);color:var(--ink);padding:.2rem .45rem;text-decoration:none;font-size:.95rem}
			.nav{display:flex;gap:.3rem;flex-wrap:wrap}
			.nav a.active{background:var(--accent);color:#fff;border-color:var(--accent)}
			.feed{margin-top:.7rem;display:grid;grid-template-columns:repeat(auto-fit,minmax(220px,1fr));gap:.6rem}
			.card{background:var(--panel);border:3px solid var(--line);padding:.75rem;box-shadow:6px 6px 0 #00000026}
			.card time{font-size:1rem;color:var(--accent)}
			.card h2{margin:.38rem 0 .32rem;font:400 clamp(1.15rem,3.1vw,1.55rem)/1 'Press Start 2P',cursive;text-transform:uppercase}
			.card p{margin:0;font-size:1.15rem}
			.card a{display:inline-block;margin-top:.55rem;color:var(--accent);text-decoration:none;font-size:1.15rem}
		</style>
	</head>
	<body>
		<div class="shell">
			<header class="top">
				<h1>Arcade Grid Feed</h1>
				<p>8-bit UI styling, scanline texture, and cartridge-era typography.</p>
				<div class="controls">
					<ThemeToggle storageKey="dotmd-theme-15" />
					<nav class="nav" aria-label="Concept routes">
						<a href="/11">11</a><a href="/12">12</a><a href="/13">13</a><a href="/14">14</a><a class="active" href="/15">15</a><a href="/16">16</a><a href="/17">17</a><a href="/18">18</a><a href="/19">19</a><a href="/20">20</a>
					</nav>
				</div>
			</header>
			<main class="feed">
				{posts.map((post) => (
					<article class="card">
						<time>{formatDate(post.data.date)}</time>
						<h2>{post.data.title}</h2>
						<p>{post.data.description}</p>
						<a href={`/${post.slug}`}>PLAY POST</a>
					</article>
				))}
			</main>
		</div>
	</body>
</html>
