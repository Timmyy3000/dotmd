---
import { formatDate, getPublishedPosts } from '../lib/posts';

const posts = await getPublishedPosts();
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>dotmd Feed Concept 3 | Organic Garden</title>
		<meta name="description" content="Feed concept 3: organic editorial with botanical rhythm." />
		<style is:global>
			@import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Karla:wght@400;500;700&display=swap');

			:root {
				--bg: #f2f0e6;
				--leaf: #365e47;
				--leaf-soft: #5b7f6b;
				--soil: #816340;
				--card: #fefcf4;
				--text: #1f2a22;
			}

			* {
				box-sizing: border-box;
			}

			body {
				margin: 0;
				font-family: 'Karla', sans-serif;
				color: var(--text);
				background:
					radial-gradient(700px 300px at 10% 5%, #d6ddc8 0%, transparent 70%),
					radial-gradient(700px 300px at 95% 8%, #c8d5c2 0%, transparent 72%),
					var(--bg);
			}

			.wrapper {
				width: min(1040px, calc(100vw - 2rem));
				margin: 1.1rem auto 3rem;
			}

			.hero {
				background: linear-gradient(150deg, #f9f6eb, #efe8d5);
				border: 1px solid #9b9c8188;
				border-radius: 2rem 0.8rem 2rem 0.8rem;
				padding: 1.2rem 1.3rem;
				position: relative;
				overflow: hidden;
			}

			.hero::before {
				content: '';
				position: absolute;
				width: 320px;
				height: 320px;
				border-radius: 50%;
				background: radial-gradient(circle, #6d8f6f3d 0%, transparent 70%);
				right: -120px;
				top: -110px;
			}

			h1 {
				font-family: 'Cormorant Garamond', serif;
				font-size: clamp(2.4rem, 7vw, 5rem);
				margin: 0;
				line-height: 0.95;
				color: var(--leaf);
			}

			.hero p {
				margin: 0.6rem 0 0;
				max-width: 60ch;
				color: #3a4a3f;
			}

			.switcher {
				margin-top: 0.9rem;
				display: flex;
				gap: 0.5rem;
				flex-wrap: wrap;
			}

			.switcher a {
				text-decoration: none;
				color: var(--leaf);
				border: 1px solid #7b8f7b;
				border-radius: 999px;
				padding: 0.34rem 0.65rem;
				font-weight: 700;
				font-size: 0.78rem;
				letter-spacing: 0.08em;
				background: #fdfaf1aa;
			}

			.switcher a.active {
				color: #f2f0e6;
				background: var(--leaf);
				border-color: transparent;
			}

			.feed {
				margin-top: 1rem;
				display: grid;
				grid-template-columns: repeat(12, 1fr);
				gap: 0.9rem;
			}

			.note {
				grid-column: span 6;
				background: var(--card);
				border: 1px solid #b9b39b;
				border-radius: 1.1rem;
				padding: 1rem;
				box-shadow: 0 18px 28px #2d35290f;
				animation: bloom 500ms ease both;
			}

			.note:nth-child(2n) {
				transform: translateY(0.6rem);
			}

			.note:nth-child(3n) {
				border-radius: 0.5rem 1.7rem 0.5rem 1.7rem;
			}

			.note:nth-child(2) {
				animation-delay: 70ms;
			}
			.note:nth-child(3) {
				animation-delay: 130ms;
			}
			.note:nth-child(4) {
				animation-delay: 200ms;
			}
			.note:nth-child(5) {
				animation-delay: 260ms;
			}

			.note time {
				font-size: 0.82rem;
				letter-spacing: 0.06em;
				text-transform: uppercase;
				color: var(--soil);
				font-weight: 700;
			}

			.note h2 {
				font-family: 'Cormorant Garamond', serif;
				font-size: clamp(1.7rem, 4vw, 2.2rem);
				line-height: 1.04;
				margin: 0.5rem 0 0.45rem;
				color: var(--leaf);
			}

			.note p {
				margin: 0;
				color: #37473d;
			}

			.note a {
				display: inline-block;
				margin-top: 0.7rem;
				text-decoration: none;
				color: var(--leaf-soft);
				font-weight: 700;
			}

			.note a:hover {
				text-decoration: underline;
			}

			@keyframes bloom {
				from {
					opacity: 0;
					transform: translateY(14px) scale(0.99);
				}
				to {
					opacity: 1;
					transform: translateY(0) scale(1);
				}
			}

			@media (max-width: 900px) {
				.note {
					grid-column: span 12;
				}

				.note:nth-child(2n) {
					transform: none;
				}
			}
		</style>
	</head>
	<body>
		<div class="wrapper">
			<header class="hero">
				<h1>Garden Feed</h1>
				<p>Soft botanical geometry, serif headlines, and asymmetric cards tuned for longform publishing.</p>
				<nav class="switcher" aria-label="Design concepts">
					<a href="/1">01</a>
					<a href="/2">02</a>
					<a class="active" href="/3">03</a>
					<a href="/4">04</a>
					<a href="/5">05</a>
				</nav>
			</header>
			<main class="feed">
				{
					posts.map((post) => (
						<article class="note">
							<time datetime={post.data.date.toISOString()}>{formatDate(post.data.date)}</time>
							<h2>{post.data.title}</h2>
							<p>{post.data.description}</p>
							<a href={`/${post.slug}`}>Read in full</a>
						</article>
					))
				}
			</main>
		</div>
	</body>
</html>
