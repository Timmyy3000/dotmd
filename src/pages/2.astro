---
import { formatDate, getPublishedPosts } from '../lib/posts';

const posts = await getPublishedPosts();
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>dotmd Feed Concept 2 | Neon Grid</title>
		<meta name="description" content="Feed concept 2: cyberpunk neon grid style." />
		<style is:global>
			@import url('https://fonts.googleapis.com/css2?family=Chakra+Petch:wght@400;500;700&family=IBM+Plex+Mono:wght@400;500&display=swap');

			:root {
				--bg: #050812;
				--panel: #0c1326dd;
				--line: #2afadf;
				--hot: #ff477e;
				--text: #d9f7ff;
				--muted: #8eb9c6;
			}

			* {
				box-sizing: border-box;
			}

			body {
				margin: 0;
				font-family: 'IBM Plex Mono', monospace;
				color: var(--text);
				background:
					radial-gradient(1200px 600px at 120% -10%, #ff477e44 0%, transparent 60%),
					radial-gradient(1000px 500px at -10% 10%, #2afadf33 0%, transparent 58%),
					repeating-linear-gradient(90deg, #ffffff0a 0 1px, transparent 1px 58px),
					repeating-linear-gradient(180deg, #ffffff0a 0 1px, transparent 1px 58px),
					var(--bg);
				min-height: 100vh;
			}

			.shell {
				width: min(1180px, calc(100vw - 2rem));
				margin: 1rem auto 3rem;
			}

			.header {
				border: 1px solid #2afadf66;
				background: #0b1021b8;
				box-shadow: 0 0 0 1px #ff477e2f inset, 0 0 24px #2afadf2b;
				padding: 1rem;
				backdrop-filter: blur(8px);
			}

			.header h1 {
				margin: 0.2rem 0;
				font-family: 'Chakra Petch', sans-serif;
				text-transform: uppercase;
				letter-spacing: 0.05em;
				font-size: clamp(2.1rem, 6vw, 4.8rem);
			}

			.header p {
				margin: 0;
				max-width: 62ch;
				color: var(--muted);
			}

			.switcher {
				margin-top: 0.8rem;
				display: flex;
				gap: 0.5rem;
				flex-wrap: wrap;
			}

			.switcher a {
				text-decoration: none;
				font-family: 'Chakra Petch', sans-serif;
				font-weight: 600;
				letter-spacing: 0.08em;
				border: 1px solid #2afadf66;
				padding: 0.32rem 0.62rem;
				color: var(--line);
			}

			.switcher a.active {
				color: #061018;
				background: linear-gradient(90deg, var(--line), #7bf9ff);
				border-color: transparent;
			}

			.feed {
				margin-top: 1rem;
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
				gap: 0.9rem;
			}

			.card {
				border: 1px solid #2afadf5f;
				background: var(--panel);
				padding: 1rem;
				position: relative;
				overflow: hidden;
				animation: boot 620ms ease both;
			}

			.card::after {
				content: '';
				position: absolute;
				inset: auto -20% -55% auto;
				width: 200px;
				height: 200px;
				border-radius: 50%;
				background: radial-gradient(circle, #ff477e66, transparent 68%);
				pointer-events: none;
			}

			.card:nth-child(2) {
				animation-delay: 80ms;
			}
			.card:nth-child(3) {
				animation-delay: 160ms;
			}
			.card:nth-child(4) {
				animation-delay: 240ms;
			}
			.card:nth-child(5) {
				animation-delay: 320ms;
			}

			.date {
				color: var(--line);
				font-size: 0.76rem;
				letter-spacing: 0.12em;
				text-transform: uppercase;
			}

			.card h2 {
				margin: 0.65rem 0 0.5rem;
				font-family: 'Chakra Petch', sans-serif;
				font-size: clamp(1.2rem, 3vw, 1.56rem);
				line-height: 1.1;
				text-transform: uppercase;
			}

			.card p {
				margin: 0;
				color: var(--muted);
				font-size: 0.95rem;
			}

			.card a {
				display: inline-block;
				margin-top: 0.9rem;
				color: #fff;
				text-decoration: none;
				font-family: 'Chakra Petch', sans-serif;
				font-weight: 600;
				background: linear-gradient(90deg, #ff477e, #ff7db2);
				padding: 0.34rem 0.62rem;
				letter-spacing: 0.07em;
			}

			.card:hover {
				box-shadow: 0 0 24px #2afadf44;
				transform: translateY(-2px);
				transition: 170ms ease;
			}

			@keyframes boot {
				from {
					opacity: 0;
					transform: translateY(18px) scale(0.98);
				}
				to {
					opacity: 1;
					transform: translateY(0) scale(1);
				}
			}
		</style>
	</head>
	<body>
		<div class="shell">
			<header class="header">
				<h1>Neon Dispatch</h1>
				<p>Cyber-grid feed with glass panels, scanline atmosphere, and high-contrast signal color.</p>
				<nav class="switcher" aria-label="Design concepts">
					<a href="/1">01</a>
					<a class="active" href="/2">02</a>
					<a href="/3">03</a>
					<a href="/4">04</a>
					<a href="/5">05</a>
				</nav>
			</header>

			<main class="feed">
				{
					posts.map((post) => (
						<article class="card">
							<div class="date">{formatDate(post.data.date)}</div>
							<h2>{post.data.title}</h2>
							<p>{post.data.description}</p>
							<a href={`/${post.slug}`}>Open node</a>
						</article>
					))
				}
			</main>
		</div>
	</body>
</html>
